<UserControl x:Class="Newtone.Desktop.Views.Custom.DataTemplates.SettingsDataTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Newtone.Desktop.Views.Custom.DataTemplates"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="{Binding Name}" FontFamily="Roboto Medium" FontSize="16" Foreground="White" Margin="0,0,0,8"/>
        <TextBlock Text="{Binding Description}" FontFamily="Roboto Thin" FontSize="16" Foreground="White" Margin="0,8,0,0" />
    </StackPanel>
</UserControl>
