<UserControl x:Class="Newtone.Desktop.Views.Custom.DataTemplates.TrackDetailedDataTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Newtone.Desktop.Views.Custom.DataTemplates"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Image Source="{Binding Image}" Grid.Column="0" Height="32" HorizontalAlignment="Center" Margin="2" Stretch="UniformToFill" />
        <TextBlock Text="{Binding TrackString}" Style="{StaticResource ListViewText}" Grid.Column="1" />
        <Image Source="../../../Resources/playIcon.png" Grid.Column="2" Stretch="Fill" Width="16" Height="16" x:Name="playIcon" Visibility="{Binding Visibility}" Margin="0 0 4 0"/>
        <TextBlock Text="{Binding Duration}" Grid.Column="3" Style="{StaticResource ListViewText}"/>
    </Grid>
</UserControl>
