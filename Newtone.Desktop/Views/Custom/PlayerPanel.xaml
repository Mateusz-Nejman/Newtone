<UserControl x:Class="Newtone.Desktop.Views.Custom.PlayerPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Newtone.Desktop.Views.Custom"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">
    <Grid Background="#1f1f1f">
        <Grid x:Name="backgroundImageGrid" Visibility="Hidden">
            <Image Source="../../Resources/EmptyTrack.png" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="backgroundImage">
                <Image.Effect>
                    <BlurEffect Radius="10"/>
                </Image.Effect>
            </Image>
            <Border Background="#42000000" BorderThickness="0"/>
        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="6"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <local:AudioSliderControl x:Name="trackSlider"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Button Style="{StaticResource TransparentButton}" Margin="4" x:Name="thumbButton" Click="ThumbButton_Click">
                    <Image Source="../../Resources/EmptyTrack.png" x:Name="trackImage" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Button>
                

                <Grid Grid.Column="1">
                    <StackPanel Orientation="Vertical" Margin="4">
                        <TextBlock Text="" FontSize="14" FontFamily="Roboto Black" Foreground="White" Margin="0 0 0 4" x:Name="trackLabel"/>
                        <TextBlock Text="" FontSize="14" FontFamily="Roboto Light" Foreground="White" Margin="0 4 0 0" x:Name="artistLabel"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Width="32" Height="32" Style="{StaticResource TransparentButton}" x:Name="buttonMode" Click="ButtonMode_Click">
                        <Image Source="../../Resources/RepeatIcon.png" Stretch="Fill" Width="16" Height="16" x:Name="modeButtonImage"/>
                    </Button>
                    <Button Grid.Column="1" Width="32" Height="32" Style="{StaticResource TransparentButton}" x:Name="buttonPrev" Click="ButtonPrev_Click">
                        <Image Source="../../Resources/PrevIcon.png" Stretch="Fill" Width="16" Height="16"/>
                    </Button>
                    <Button Grid.Column="2" Width="32" Height="32" Style="{StaticResource TransparentButton}" x:Name="buttonPlayPause" Click="ButtonPlayPause_Click">
                        <Image Source="../../Resources/PlayIcon.png" x:Name="playButtonImage" Stretch="Fill" Width="16" Height="16"/>
                    </Button>
                    <Button Grid.Column="3" Width="32" Height="32" Style="{StaticResource TransparentButton}" x:Name="buttonNext" Click="ButtonNext_Click">
                        <Image Source="../../Resources/NextIcon.png" Stretch="Fill" Width="16" Height="16"/>
                    </Button>
                </Grid>

                <Button Grid.Column="4" Width="32" Height="32" Style="{StaticResource TransparentButton}" Margin="0,0,8,0" x:Name="volumeDown" Click="VolumeDown_Click">
                    <Image Source="../../Resources/VolumeDownIcon.png" Stretch="Fill" Width="32" Height="32"/>
                </Button>
                <Button Grid.Column="5" Width="32" Height="32" Style="{StaticResource TransparentButton}" Margin="0,0,8,0" x:Name="volumeUp" Click="VolumeUp_Click">
                    <Image Source="../../Resources/VolumeUpIcon.png" Stretch="Fill" Width="32" Height="32"/>
                </Button>
            </Grid>
        </Grid>
        
    </Grid>
</UserControl>
