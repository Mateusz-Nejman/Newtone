<Window x:Class="Newtone.Desktop.Views.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Newtone.Desktop.Views"
        xmlns:localization="clr-namespace:Newtone.Core.Languages;assembly=Newtone.Core"
        xmlns:viewmodels="clr-namespace:Newtone.Desktop.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="140" Width="342" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Text}" Margin="5" TextWrapping="Wrap" HorizontalAlignment="Center"/>
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Command="{Binding Command}" Grid.Column="1">
                <TextBlock Text="{Binding ButtonText}" Margin="16,0,16,0"/>
            </Button>
        </Grid>
    </Grid>
</Window>
