<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewcells="clr-namespace:Newtone.Mobile.UI.Views.ViewCells"
             xmlns:viewmodels="clr-namespace:Newtone.Mobile.UI.ViewModels"
             x:Class="Newtone.Mobile.UI.Views.CurrentPlaylistPage">
    <ContentView.BindingContext>
        <viewmodels:CurrentPlaylistViewModel/>
    </ContentView.BindingContext>
    <ContentView.Content>
        <ListView SelectionMode="Single" VerticalOptions="FillAndExpand" ItemSelected="TrackListView_ItemSelected"  ItemsSource="{Binding TrackItems}" IsPullToRefreshEnabled="True" RefreshCommand="{Binding Refresh}" RefreshControlColor="#0f4c75" IsRefreshing="{Binding IsRefreshing}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <viewcells:TrackViewCell/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentView.Content>
</ContentView>