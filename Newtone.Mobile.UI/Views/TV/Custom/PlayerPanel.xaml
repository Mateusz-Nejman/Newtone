<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:focuslibrary="clr-namespace:Nejman.Xamarin.FocusLibrary" 
             xmlns:local="clr-namespace:Newtone.Mobile.UI"
             xmlns:custom="clr-namespace:Newtone.Mobile.UI.ViewModels.TV.Custom"
             x:Class="Newtone.Mobile.UI.Views.TV.Custom.PlayerPanel"
             HeightRequest="60">
    <ContentView.BindingContext>
        <custom:PlayerPanelViewModel/>
    </ContentView.BindingContext>
    <ContentView.Content>
        <Grid BackgroundColor="{Static local:Colors.ColorSecondary}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.ColumnSpan="3" x:Name="backgroundGrid" IsVisible="{Binding BackgroundGridVisible}">
                <Image Source="{Binding TrackBlur}" Aspect="AspectFill" VerticalOptions="Center" HorizontalOptions="Fill" x:Name="backgroundImage"/>
                <Grid BackgroundColor="#99000000"/>
            </Grid>
            <focuslibrary:NImageButton 
                Padding="4" 
                Source="{Binding TrackImage}" 
                x:Name="trackImage" 
                Aspect="AspectFill" 
                NCommand="{Binding GotoPlayer}" 
                BackgroundColor="Transparent"
                NextFocusRight="{x:Reference playButton}"
                NextFocusUp="{Binding NextFocusUp}"/>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Text="{Binding Title}" FontSize="14" FontFamily="{x:Static local:Fonts.Black}" TextColor="{Static local:Colors.TextColor}" Margin="0,4,0,0" LineBreakMode="TailTruncation" x:Name="trackLabel"/>
                <Label Text="{Binding Artist}" FontSize="14" FontFamily="{x:Static local:Fonts.Light}" TextColor="{Static local:Colors.TextColor}" Margin="0,0,0,4" LineBreakMode="TailTruncation" Grid.Row="1" x:Name="artistLabel"/>
            </Grid>
            <focuslibrary:NImageButton 
                Source="{Binding PlayButton}" 
                Grid.Column="2" 
                Style="{StaticResource TransparentImageButton}" 
                Padding="20" 
                x:Name="playButton" 
                NCommand="{Binding PlayPause}"
                NextFocusLeft="{x:Reference trackImage}"
                NextFocusUp="{Binding NextFocusUp1}"/>
        </Grid>
    </ContentView.Content>
</ContentView>