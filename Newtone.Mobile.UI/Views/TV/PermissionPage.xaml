<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:localization="clr-namespace:Newtone.Core.Languages;assembly=Newtone.Core"
             xmlns:local="clr-namespace:Newtone.Mobile.UI"
             xmlns:viewmodels="clr-namespace:Newtone.Mobile.UI.ViewModels" xmlns:focuslibrary="clr-namespace:Nejman.Xamarin.FocusLibrary"
             x:Class="Newtone.Mobile.UI.Views.TV.PermissionPage"
             Visual="Material" 
             NavigationPage.HasNavigationBar="False">
    <ContentPage.BindingContext>
        <viewmodels:PermissionViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <RelativeLayout BackgroundColor="{x:Static local:Colors.ColorPrimary}">
            <StackLayout BackgroundColor="Transparent" VerticalOptions="FillAndExpand" HorizontalOptions="Fill" 
                     
                     RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent,Property=Height,Factor=0.0,Constant=144}"
                     RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,Property=Width,Factor=1.0}">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
                    <ContentView Padding="0,40,0,40" VerticalOptions="FillAndExpand">
                        <Image Source="NewtoneIcon.png" VerticalOptions="Center" HeightRequest="64" />
                    </ContentView>
                </StackLayout>
            </StackLayout>
            <ScrollView VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never" RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,Property=Height,Factor=0.0,Constant=144}" 
                    RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,Property=Width,Factor=1.0}">
                <StackLayout Orientation="Vertical" Padding="16,40,16,40" Spacing="10">
                    <Label FontSize="22" TextColor="{Static local:Colors.TextColor}">
                        <Label.FormattedText>
                            <FormattedString>
                                <FormattedString.Spans>
                                    <Span Text="{x:Static localization:Localization.PermissionInfo}" FontAttributes="Bold" FontSize="16" />
                                </FormattedString.Spans>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <focuslibrary:NButton Margin="0,10,0,0" Text="{x:Static localization:Localization.PermissionGrant}"
                        NCommand="{Binding Grant}"
                        BackgroundColor="Transparent"
                        BorderColor="Black"
                        NFocusColor="White"
                        IsNFocused="True"
                        TextColor="{Static local:Colors.TextColor}"/>
                </StackLayout>
            </ScrollView>

        </RelativeLayout>
    </ContentPage.Content>
</ContentPage>