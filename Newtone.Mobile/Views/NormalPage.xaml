<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:custom="clr-namespace:Newtone.Mobile.Views.Custom"
             xmlns:images="clr-namespace:Newtone.Mobile.Views.Images"
             xmlns:local="clr-namespace:Newtone.Mobile"
             xmlns:viewmodels="clr-namespace:Newtone.Mobile.ViewModels"
             xmlns:localization="clr-namespace:Newtone.Core.Languages;assembly=Newtone.Core"
             mc:Ignorable="d"
             x:Class="Newtone.Mobile.Views.NormalPage">
    <ContentPage.Content>
        <Grid>
            <Grid RowSpacing="0" x:Name="outerGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid BackgroundColor="{Static local:Colors.ColorSecondary}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <Frame CornerRadius="30" BackgroundColor="Transparent" Padding="5,10">
                        <Grid BackgroundColor="#80000000">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Entry 
                            Text="{Binding EntryText}" Placeholder="{Binding SearchPlaceholder}" 
                            BackgroundColor="Transparent" PlaceholderColor="{x:Static local:Colors.TextColor}" 
                            TextColor="{x:Static local:Colors.TextColor}" ReturnType="Search" 
                            Focused="Entry_Focused" Unfocused="Entry_Unfocused" 
                            TextChanged="Entry_TextChanged" Completed="Entry_Completed" 
                            x:Name="searchEntry"/>
                            <ImageButton Grid.Column="1" Source="CloseIconAndroid.png" BackgroundColor="Transparent" Command="{Binding ClearSearchText}" IsVisible="{Binding SearchCancelVisible}"/>
                        </Grid>
                    </Frame>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <images:CustomImageButton Source="UploadIcon.png" Style="{StaticResource TransparentImageButton}" Grid.ColumnSpan="2" Grid.RowSpan="2" Padding="20" Command="{Binding GotoSync}"/>
                        <Grid Grid.Row="1" x:Name="badgeBubbleSync" IsVisible="{Binding BadgeSyncVisible}">
                            <Frame CornerRadius="32" Margin="4" BackgroundColor="{Static local:Colors.BadgeColor}"/>
                            <Label HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="{Binding BadgeSync}" TextColor="{Static local:Colors.TextColor}"/>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <images:CustomImageButton Source="DownloadIcon.png" Style="{StaticResource TransparentImageButton}" Grid.ColumnSpan="2" Grid.RowSpan="2" Padding="20" Command="{Binding GotoDownload}"/>
                        <Grid Grid.Row="1" IsVisible="{Binding BadgeVisible}">
                            <Frame CornerRadius="32" Margin="4" BackgroundColor="{Static local:Colors.BadgeColor}"/>
                            <Label HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="{Binding Badge}" TextColor="{Static local:Colors.TextColor}"/>
                        </Grid>
                    </Grid>

                </Grid>
                <Grid BackgroundColor="{Static local:Colors.ColorPrimary}" Grid.Row="1" x:Name="container">

                </Grid>
                <Grid BackgroundColor="{Static local:Colors.ColorPrimary}" Grid.Row="1" IsVisible="{Binding SpinnerVisible}">
                    <ActivityIndicator IsRunning="True" VerticalOptions="Center" HorizontalOptions="Center" Color="White"/>
                </Grid>
                <Grid BackgroundColor="{Static local:Colors.ColorPrimary}" Grid.Row="1" IsVisible="{Binding SearchSuggestionsVisible}" >
                    <ScrollView VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never" HorizontalOptions="Fill" VerticalOptions="Fill" Orientation="Vertical">
                        <ListView VerticalOptions="FillAndExpand"
                          ItemSelected="SuggestionList_ItemSelected"  ItemsSource="{Binding SuggestionItems}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Text="{Binding Text}" VerticalOptions="Center" FontSize="14" TextColor="{x:Static local:Colors.TextColor}" FontFamily="{x:Static local:Fonts.Light}" Margin="10,0,0,0"/>
                                        </Grid>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollView>
                </Grid>
                <Grid BackgroundColor="{Static local:Colors.ColorSecondary}" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <images:CustomImageButton Source="PlayIcon.png" Style="{StaticResource TransparentImageButton}" Padding="20" Command="{Binding GotoPlayer}" />
                    </Grid>
                    <Grid Grid.Column="1">
                        <images:CustomImageButton Source="TrackIcon.png" Style="{StaticResource TransparentImageButton}" Padding="20" Command="{Binding GotoTracks}" IsToggled="{Binding TracksButtonToggled}"/>
                    </Grid>
                    <Grid Grid.Column="2">
                        <images:CustomImageButton Source="ArtistIcon.png" Style="{StaticResource TransparentImageButton}" Padding="20" Command="{Binding GotoArtists}" IsToggled="{Binding ArtistsButtonToggled}"/>
                    </Grid>
                    <Grid Grid.Column="3">
                        <images:CustomImageButton Source="PlaylistIcon.png" Style="{StaticResource TransparentImageButton}" Padding="20" Command="{Binding GotoPlaylists}" IsToggled="{Binding PlaylistsButtonToggled}"/>
                    </Grid>
                    <Grid Grid.Column="4">
                        <images:CustomImageButton Source="SettingsIcon.png" Style="{StaticResource TransparentImageButton}" Padding="20" Command="{Binding GotoSettings}" IsToggled="{Binding SettingsButtonToggled}"/>
                    </Grid>
                </Grid>
                <custom:PlayerPanel Grid.Row="3" x:Name="playerPanel"/>
            </Grid>
            <Grid x:Name="blocker" IsVisible="false" VerticalOptions="Fill" HorizontalOptions="Fill"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>